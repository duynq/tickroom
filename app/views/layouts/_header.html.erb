<div class="docs-header" >
  <nav class="navbar navbar-default navbar-custom" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "TickRoom", root_url, class: "navbar-brand", id: "logo" %>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><%= link_to "Trở thành chủ phòng",  new_room_path, method: :get %></li>
            <li>
              <%= link_to mailbox_inbox_path do %>
                <label>Hộp thư đến</label>
                <span class="label label-danger pull-right"><%=unread_messages_count%></span>
                <em class="fa fa-inbox fa-lg"></em>
              <% end %>
            </li>
            <li class="round-image-50" >
              <%= if current_user.avatar?
                image_tag current_user.avatar.url(:thumb)
                else image_tag "user.png"
                end %>
            </li>
            <li class="dropdown" >
              <a href="#" class="dropdown-toggle " data-toggle="dropdown">
                 <b class="caret"></b>
              </a>
              <ul class="dropdown-menu" >
               <li><%= link_to "Trang cá nhân", "#" %></li>
                <li><%= link_to "Cài đặt tài khoản", edit_user_registration_path %></li>
                <li class="divider"></li>
                <li><%= link_to "Đăng suất", destroy_user_session_path, method: :delete  %></li>
              </ul>
            </li>
            <% else %>
            <li class="nav-link"><%= link_to "Đăng ký", new_user_registration_path %></li>
            <li class="nav-link"><%= link_to "Đăng nhập", new_user_session_path %></li>
            <% end %>
        </ul>
      </div>
    </div>
  </nav>
